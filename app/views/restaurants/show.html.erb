<div class="container">
  <h1><%= @restaurant.name %></h1>

  <h3><%= @restaurant.category %></h3>

  <h4><%= @restaurant.address %></h4>

  <h6>+<%= @restaurant.phone_number %></h6>
  <div class="my-3">
    <%= link_to '🏠 Go Back', restaurants_path, class: "btn btn-secondary" %>
    <%= link_to '📝 Add a Review', new_restaurant_review_path(@restaurant), class: "btn btn-secondary" %>
  </div>


  <div class="container">
      <div class="card">
        <% @restaurant.reviews.each do |review| %>
          <div class="card-body">
            <p><%= review.content %></p>
            <p><%= '⭐️' * review.rating %></p>
          </div>
       <% end %>
      </div>
  </div>
</div>
